@using System.Linq.Expressions
@inject ISkillsClient SkillsClient

<MudAutocomplete T="SkillDto" Label="@Label" Dense="true" Variant="Variant" Style="@Style" Class="@Class" Value="Value" ValueChanged="ValueChanged"
    For="For" SearchFunc="SearchSkills" ToStringFunc="(x) => x.Name"
    ResetValueOnEmptyText="true" CoerceText="false" CoerceValue="false">
    <ItemTemplate Context="context2">
        <MudText Typo="Typo.body1">@context2.Name</MudText>
        <MudText Typo="Typo.body2">@context2.Area.Name (@context2.Area.Industry.Name)</MudText>
    </ItemTemplate>

    <ItemSelectedTemplate Context="context2">
        <MudText Typo="Typo.body1">@context2.Name</MudText>
    </ItemSelectedTemplate>
</MudAutocomplete>

@code {
    [Parameter]
    public string Label { get; set; } = "Skill";

    [Parameter]
    public SkillDto Value { get; set; }

    [Parameter]
    public EventCallback<SkillDto> ValueChanged { get; set; }

    [Parameter]
    public Expression<Func<SkillDto>> For { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public Variant Variant { get; set; }

    [Parameter]
    public string SkillAreaId { get; set; }

    async Task<IEnumerable<SkillDto>> SearchSkills(string text)
    {
        try
        {
            var results = await SkillsClient.GetSkillsAsync(1, 10, SkillAreaId, text, null, null);
            return results.Items;
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }

        return null;
    }
}