@inherits LayoutComponentBase
@implements IAsyncDisposable
@using YourBrand.Portal.Theming
@using Blazored.LocalStorage
@using MudBlazor.Services
@inject ThemeManager ThemeManager
@inject ILocalStorageService LocalStorage
@inject IBreakpointService BreakpointListener

<MudThemeProvider IsDarkMode="@(_currentColorScheme == ColorScheme.Dark)" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar DrawerToggleCallback="DrawerToggle" />
    <MudDrawer Open="_drawerOpen" OpenChanged="OpenChanged" ClipMode="DrawerClipMode.Always" DisableOverlay="_disableOverlay" Elevation="2"
        Variant="@_drawerVariant">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body

        <MudScrollToTop>
            <MudFab Color="Color.Tertiary" Icon="@Icons.Filled.ArrowCircleUp" />
        </MudScrollToTop>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new MudTheme()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Roboto", "sans-serif" }
            }
        },
        Palette = new Palette
        {
            Background = "#f9f9f9",
            AppbarBackground = "#242222",
            Primary = "#63a9cb",
            //Secondary = "#00000000"
        }
    };

    bool _drawerOpen = false;
    ColorScheme? _currentColorScheme;
    Guid _subscriptionId;
    DrawerVariant _drawerVariant = DrawerVariant.Persistent;
    bool _disableOverlay = true;

    protected override async Task OnInitializedAsync()
    {
        _currentColorScheme = ThemeManager.CurrentColorScheme;
        ThemeManager.ColorSchemeChanged += OnColorSchemeChanged;

        var breakpoint = BreakpointListener.GetBreakpoint();

        var subscriptionResult = await BreakpointListener.Subscribe((breakpoint) =>
        {
            UpdateDrawerVariant(breakpoint);
        }, new ResizeOptions
        {
            ReportRate = 250,
            NotifyOnBreakpointOnly = true,
        });

        _drawerOpen = await LocalStorage.GetItemAsync<bool?>("drawerOpen") ?? true;
    }

    async Task OpenChanged(bool isOpen) 
    {
        _drawerOpen = isOpen;
        await LocalStorage.SetItemAsync("drawerOpen", _drawerOpen);
    }

    void UpdateDrawerVariant(Breakpoint breakpoint)
    {
        if (breakpoint == Breakpoint.Xs || breakpoint == Breakpoint.Sm)
        {
            if(_drawerOpen) 
            {
                DrawerToggle();
            }
            _drawerVariant = DrawerVariant.Temporary;
            _disableOverlay = false;
        }
        else
        {
            if(_drawerOpen) 
            {
                DrawerToggle();
            }
            _drawerVariant = DrawerVariant.Persistent;
            _disableOverlay = true;
        }

        StateHasChanged();
    }

    async Task DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void OnColorSchemeChanged(object? sender, ColorSchemeChangedEventArgs ea)
    {
        _currentColorScheme = ea.ColorScheme;

        StateHasChanged();
    }

    public async ValueTask DisposeAsync() => await BreakpointListener.Unsubscribe(_subscriptionId);
}