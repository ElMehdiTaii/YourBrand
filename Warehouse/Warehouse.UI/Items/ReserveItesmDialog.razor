@using System.ComponentModel.DataAnnotations
@inject IItemsClient ItemsClient
@inject ISnackbar Snackbar

<EditForm EditContext="@context" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudDialog DisableSidePadding="true">
        <DialogContent>
            <MudContainer Style="max-height: 500px; overflow-y: scroll">
                <MudNumericField Label="Quantity to reserve" Variant="Variant.Outlined" Class="mt-4" @bind-Value="Quantity"
                              For="@(() => Quantity)" />
            </MudContainer>
        </DialogContent>

        <DialogActions>
            <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="() => Dialog.Cancel()">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Primary">
                Adjust
            </MudButton>
        </DialogActions>
    </MudDialog>

</EditForm>

@code
{
    EditContext context = null!;

    [CascadingParameter]
    public MudDialogInstance Dialog { get; set; } = null!;

    [Parameter]
    public string? ItemId { get; set; } = null!;

    [Required]
    public int Quantity { get; set; }

    protected override async Task OnInitializedAsync()
    {
        context = new EditContext(this);

        if (ItemId is not null) 
        {
            var item = await ItemsClient.GetItemAsync(ItemId);
        }
    }

    public async Task OnValidSubmit()
    {
        if (context.IsModified())
        {
            await ItemsClient.ReserveItemsAsync(ItemId, Quantity);
        }

        Dialog.Close(Quantity);
    }
}