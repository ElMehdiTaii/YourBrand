@using System.ComponentModel.DataAnnotations
@inject IItemsClient ItemsClient
@inject ISnackbar Snackbar

<EditForm EditContext="@context" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudDialog DisableSidePadding="true">
        <DialogContent>
            <MudContainer Style="max-height: 500px; overflow-y: scroll">
                <MudTextField Label="SKU" Variant="Variant.Outlined" Class="mt-4" @bind-Value="SKU"
                              For="@(() => SKU)" />

                <MudTextField Label="Name" Variant="Variant.Outlined" Class="mt-4" @bind-Value="Name"
                              For="@(() => Name)" />
            </MudContainer>
        </DialogContent>

        <DialogActions>
            <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="() => Dialog.Cancel()">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Text" Color="Color.Primary">
                @if(ItemId is null) 
                {
                    <text>Add</text>
                }
                else 
                {
                    <text>Update</text>
                }
            </MudButton>
        </DialogActions>
    </MudDialog>

</EditForm>

@code
{
    EditContext context = null!;

    [CascadingParameter]
    public MudDialogInstance Dialog { get; set; } = null!;

    [Parameter]
    public string? ItemId { get; set; } = null!;

    //[Required]
    //public ItemDto Area { get; set; }

    [Required]
    public string SKU { get; set; }


    [Required]
    public string Name { get; set; }

    protected override async Task OnInitializedAsync()
    {
        context = new EditContext(this);

        if (ItemId is not null) 
        {
            var item = await ItemsClient.GetItemAsync(ItemId);
            //Area = item.Area;
            SKU = item.Sku;
            Name = item.Name;
        }
    }

    public async Task OnValidSubmit()
    {
        if(ItemId is null) 
        {
            var item = await ItemsClient.CreateItemAsync(new CreateItemDto {
                //ItemId = Area.Id,
                Sku = SKU,
                Name = Name
            });

            Dialog.Close(item);
        }
        else 
        {
            if (context.IsModified())
            {
                await ItemsClient.UpdateItemAsync(ItemId, new UpdateItemDto
                {
                    //ItemId = Area.Id,
                    Sku = SKU,
                    Name = Name
                });
            }

            Dialog.Close();
        }
    }
}